{
  "manifest_version": 3,
  "name": "ScanVision Linter Pro",
  "version": "1.0.0",
  "description": "Visual scannability auditing tool for technical documentation. Analyze what users see in the first 3-5 seconds.",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content/index.ts"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}